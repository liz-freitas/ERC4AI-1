<%= form_with(model: [Current.session, requirement], class: "contents") do |form| %>
  <% if requirement.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(requirement.errors.count, "error") %> prohibited this requirement from being saved:</h2>

      <ul class="list-disc ml-6">
        <% requirement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.text_area :content, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": requirement.errors[:content].none?, "border-red-400 focus:outline-red-600": requirement.errors[:content].any?}] %>
  </div>

  <!-- Radio buttons with the options "Binary Classification" and "Multi Label Classification" -->
  <div class="my-5">
    <div class="flex items-center">
      <div class="mr-3">
        <%= form.radio_button :classification_type, "binary", class: "form-radio h-4 w-4 text-blue-600", checked: true %>
      </div>
      <div>
        <label for="binary" class="font-medium text-gray-700">Binary Classification</label>
      </div>
    </div>

    <div class="flex items-center my-5">
      <div class="mr-3">
        <%= form.radio_button :classification_type, "multilabel", class: "form-radio h-4 w-4 text-blue-600" %>
      </div>
      <div>
        <label for="multilabel" class="font-medium text-gray-700">Multi Label Classification</label>
      </div>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-indigo-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
