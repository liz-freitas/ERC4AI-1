<% content_for :title, "Requirements" %>

<div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block w-full" id="notice"><%= notice %></p>
  <% end %>

  <div class="w-full bg-white shadow-lg rounded-lg p-6 mb-5">
    <%= render "requirements/new", requirement: Requirement.new %>
  </div>
  
  <div class="bg-white shadow-lg rounded-lg p-9">
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Last Requirements</h1>
    </div>

    <div id="requirements" class="grid grid-cols-1 lg:grid-cols-3 gap-5 p-6">
      <% if @requirements.any? %>
        <% @requirements.each do |requirement| %>
          <div class="relative border-1 border-gray-400 rounded-lg p-6">
            <%= render requirement %>
          </div>
        <% end %>
      <% else %>
        <p class="text-center my-10">No requirements found.</p>
      <% end %>
    </div>
  </div>
</div>
