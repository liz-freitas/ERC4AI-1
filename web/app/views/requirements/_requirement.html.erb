<div id="<%= dom_id requirement %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Content:</strong>
    <%= requirement.content %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Ethic:</strong>
    <%= requirement.ethic? ? "Yes" : "No" %>
  </div>
  <% if requirement.erc4ai_classes.present? %>
    <div>
      <strong class="block font-medium mb-1">Classes:</strong>

      <div class="flex flex-wrap gap-2">
        <% requirement.erc4ai_classes.each do |erc4ai_class| %>
          <span class="px-2 py-1 bg-gray-200 rounded-full text-sm text-gray-800">
            <%= erc4ai_class %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
